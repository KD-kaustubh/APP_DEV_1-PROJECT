# Auto detect text files and normalize line endings to LF
* text=auto

# Python files
*.py text eol=lf
*.pyw text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# HTML/CSS/JS
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.json text eol=lf

# Documents
*.md text eol=lf
*.txt text eol=lf

# Binaries
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.sqlite binary
*.db binary
